// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Pyplate Devcontainer",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/va-h/devcontainers-features/uv:1": {},
		"ghcr.io/devcontainers-extra/features/terraform-asdf:2": {},
		"ghcr.io/devcontainers/features/aws-cli:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.isort",
				"charliermarsh.ruff",
				"hashicorp.terraform",
				"esbenp.prettier-vscode"
			],
			"settings": {
				"[python]": {
					"editor.codeActionsOnSave": {
						"ruff.executeOrganizeImports": "always"
					},
					"editor.defaultFormatter": "charliermarsh.ruff",
					"editor.formatOnSave": true,
					"editor.insertSpaces": true,
					"editor.tabSize": 4
				},
				"[json]": {
					"editor.defaultFormatter": "esbenp.prettier-vscode",
					"editor.insertSpaces": true,
					"editor.tabSize": 2
				},
				"[yaml]": {
					"editor.defaultFormatter": "esbenp.prettier-vscode",
					"prettier.singleQuote": true
				},
				"editor.formatOnPaste": true,
				"editor.formatOnSave": true,
				"ruff.nativeServer": "on",
				"ruff.interpreter": [
					"${workspaceFolder}/.venv/bin/python"
				],
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/usr/bin/zsh"
					}
				},
				"python.analysis.languageServerMode": "full",
				"python.analysis.typeCheckingMode": "basic",
				"python.analysis.indexing": true,
				"python.terminal.activateEnvInCurrentTerminal": true,
				"python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python"
			}
		}
	},
	"mounts": [
		"source=${env:HOME}${env:USERPROFILE}/.aws,target=/home/vscode/.aws,type=bind",
		"source=${env:HOME}${env:USERPROFILE}/.gitconfig,target=/home/vscode/.gitconfig,type=bind",
		"source=${env:HOME}${env:USERPROFILE}/.zsh_history,target=/home/vscode/.zsh_history,type=bind",
        "source=${env:HOME}${env:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
        "source=cache,target=/home/vscode/.cache,type=volume"
	],
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "uv sync"
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
